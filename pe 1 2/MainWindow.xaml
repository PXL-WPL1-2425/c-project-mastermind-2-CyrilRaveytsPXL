<Window x:Class="Mastermind.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Mastermind" Height="450" Width="800">
    <Grid>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
            <ComboBox x:Name="ComboBox1" Width="100" Margin="5" />
            <ComboBox x:Name="ComboBox2" Width="100" Margin="5" />
            <ComboBox x:Name="ComboBox3" Width="100" Margin="5" />
            <ComboBox x:Name="ComboBox4" Width="100" Margin="5" />
        </StackPanel>

        <Label x:Name="TimerLabel" 
               Content="Timer: 0" 
               FontSize="16" 
               HorizontalAlignment="Center" 
               VerticalAlignment="Bottom" 
               Margin="10" />

        
        <TextBox x:Name="DebugTextBox" 
                 Visibility="Collapsed" 
                 HorizontalAlignment="Center" 
                 VerticalAlignment="Top" 
                 Margin="10" 
                 IsReadOnly="True" />

        
        <Button x:Name="ValidateButton" 
                Content="Check code" 
                HorizontalAlignment="Center" 
                VerticalAlignment="Top" 
                Margin="10" 
                Click="ValidateButton_Click" />
    </Grid>
</Window>

